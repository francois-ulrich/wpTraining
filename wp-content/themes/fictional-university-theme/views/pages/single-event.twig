{% extends "/templates/page.twig" %}

{% block content %}
    <div class="container container--narrow page-section">
        <div class="content-wrapper">
            <article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
                <section class="article-content">
                    <h1 class="article-h1">{{ post.title }}</h1>

                    <h2 class="article-h2">{{ post.subtitle }}</h2>

                    {% include "/components/posts/post-infos.twig" %}

                    {{ post.content }}


                    {% if programs %}
                        <hr class="section-break">

                        <h3 class="headline headline--medium">Related programs</h3>

                        <ul>
                            {% for program in programs %}
                                <li><a href="{{program.guid}}">{{program.post_title}}</a></li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </section>
            </article>
        </div>
    </div>
{% endblock %}
