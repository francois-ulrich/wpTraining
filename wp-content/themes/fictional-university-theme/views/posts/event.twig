<div class="event-summary">
	<a class="event-summary__date t-center" href="{{post.link}}">

		<span class="event-summary__month">{{post.event_date | date("M")}}</span>
		<span class="event-summary__day">{{post.event_date | date("d")}}</span>
	</a>
	<div class="event-summary__content">
		<h5 class="event-summary__title headline headline--tiny">
			<a href="{{post.link}}">{{post.title}}</a>
		</h5>
		<p>
			{{post.preview.length(18).read_more(false)}}
		</p>

		<a href="{{post.link}}" class="nu gray">Learn&nbsp;more</a>

	</div>
</div>
